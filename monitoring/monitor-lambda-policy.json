{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PublishReporting",
      "Effect": "Allow",
      "Action": ["sns:Publish"],
      "Resource": [ 
         "arn:aws:sns::187976421381:app-monitoring-reports"
       ]
    },    
    {
      "Sid": "ReadLogs",
      "Effect": "Allow",
      "Action": [
                 "logs:GetLogEvents", 
                 "logs:FilterLogEvents"
                 ],
      "Resource": [ 
        "arn:aws:logs::187976421381:log-group:/aws/lambda/monitor-lambda-logs:*"
      ]
    }
  ]
}